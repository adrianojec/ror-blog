<%= form_with model: @article do |f| %>
  <p>
    <%= f.label :title%><br/>
    <%= f.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |errorMessage| %>
      <li><%= errorMessage %></li>
    <% end %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
    <% @article.errors.full_messages_for(:description).each do |errorMessage| %>
      <li><%= errorMessage %></li>
    <% end %>
  </p>
  <p>
    <%= f.submit%>
  </p>
<% end %>